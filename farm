-- AutoFarm PointCANDY Parkour Legacy

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local pattern = "^%x%x%x%x%x%x%x%x%-%x%x%x%x%-%x%x%x%x%-%x%x%x%x%-%x%x%x%x%x%x%x%x%x%x%x%x$"

local teleportDelay = 1.0
local candyCount = 0
local running = false

-- === FALL DAMAGE PROTECTION ===
local function disableFallDamage()
	local humanoid = character:FindFirstChildOfClass("Humanoid")
	if humanoid then
		humanoid.StateChanged:Connect(function(_, newState)
			if newState == Enum.HumanoidStateType.Freefall then
				humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
			end
		end)
	end
end

player.CharacterAdded:Connect(function(char)
	character = char
	task.wait(1)
	disableFallDamage()
end)
disableFallDamage()

-- === UI ELEMENTS ===
local gui = Instance.new("ScreenGui")
gui.Name = "AutoCandyUI"
gui.ResetOnSpawn = false
gui.Parent = gethui and gethui() or game.CoreGui

-- üü¢ Icon Button (Toggle)
local iconButton = Instance.new("ImageButton")
iconButton.Name = "CandyIcon"
iconButton.Size = UDim2.new(0, 50, 0, 50)
iconButton.Position = UDim2.new(1, -70, 0, 20)
iconButton.BackgroundTransparency = 1
iconButton.Image = "rbxassetid://6031075931" -- üç≠ Candy icon asset
iconButton.Parent = gui

-- ü™ü Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 160)
frame.Position = UDim2.new(0.78, 0, 0.22, 0)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BackgroundTransparency = 0.2
frame.Active = true
frame.Draggable = true
frame.Visible = false
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.Text = "üç¨ Auto Candy v2"
title.TextSize = 15
title.TextColor3 = Color3.new(1, 1, 1)
title.Parent = frame

local status = Instance.new("TextLabel", frame)
status.Size = UDim2.new(1, -20, 0, 25)
status.Position = UDim2.new(0, 10, 0, 40)
status.BackgroundTransparency = 1
status.Font = Enum.Font.Gotham
status.TextSize = 13
status.TextColor3 = Color3.fromRGB(200, 200, 200)
status.Text = "Status: Idle"
status.Parent = frame

local counter = Instance.new("TextLabel", frame)
counter.Size = UDim2.new(1, -20, 0, 25)
counter.Position = UDim2.new(0, 10, 0, 65)
counter.BackgroundTransparency = 1
counter.Font = Enum.Font.Gotham
counter.TextSize = 13
counter.TextColor3 = Color3.fromRGB(255, 200, 200)
counter.Text = "üç≠ Candy Collected: 0"
counter.Parent = frame

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 210, 0, 40)
button.Position = UDim2.new(0.5, -105, 1, -50)
button.Text = "‚ñ∂Ô∏è Start Auto Teleport"
button.Font = Enum.Font.GothamBold
button.TextSize = 14
button.BackgroundColor3 = Color3.fromRGB(40, 160, 80)
button.TextColor3 = Color3.new(1, 1, 1)
button.BorderSizePixel = 0
Instance.new("UICorner", button).CornerRadius = UDim.new(0, 10)
button.Parent = frame

-- === RGB TITLE ===
task.spawn(function()
	while true do
		local t = tick() * 2
		local r = math.sin(t) * 0.5 + 0.5
		local g = math.sin(t + 2) * 0.5 + 0.5
		local b = math.sin(t + 4) * 0.5 + 0.5
		title.TextColor3 = Color3.new(r, g, b)
		task.wait(0.05)
	end
end)

-- === TELEPORT LOOP ===
local function teleportLoop()
	while running do
		local candies = {}
		for _, obj in ipairs(workspace:GetChildren()) do
			if obj:IsA("BasePart") and obj.Name:match(pattern) then
				table.insert(candies, obj)
			end
		end

		if #candies == 0 then
			status.Text = "‚ö†Ô∏è No candy found!"
			task.wait(3)
		else
			for i, obj in ipairs(candies) do
				if not running then break end
				character = player.Character or player.CharacterAdded:Wait()
				local hrp = character:WaitForChild("HumanoidRootPart", 3)
				if hrp then
					hrp.CFrame = obj.CFrame + Vector3.new(0, 3, 0)
					candyCount += 1
					counter.Text = "üç≠ Candy Collected: " .. candyCount
					status.Text = string.format("Teleporting... [%d/%d]", i, #candies)
				end
				task.wait(teleportDelay)
			end
			status.Text = "üîÅ Looping again..."
			task.wait(2)
		end
	end
	status.Text = "‚èπÔ∏è Stopped"
end

-- === BUTTON HANDLERS ===
button.MouseButton1Click:Connect(function()
	if running then
		running = false
		button.Text = "‚ñ∂Ô∏è Start Auto Teleport"
		button.BackgroundColor3 = Color3.fromRGB(40, 160, 80)
	else
		running = true
		button.Text = "‚è∏Ô∏è Stop Auto Teleport"
		button.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
		status.Text = "Running..."
		task.spawn(teleportLoop)
	end
end)

iconButton.MouseButton1Click:Connect(function()
	frame.Visible = not frame.Visible
end)
